<?xml version="1.0"?>
<Grammar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
		 xsi:type="AssignmentGrammar">
	<name>Asian Pseudoword</name>
	<author>Lance Boudreaux</author>
	<description>Uses the Asian phonemes library to construct random Asian sounding words</description>
	<tags>
		<tag>Asian</tag>
		<tag>Word</tag>
	</tags>
	<parameters>
	    <parameter name="Language" display="Language" type="List">
			<option>Any</option>
			<option>Chinese</option>
			<option>Korean</option>
			<option>Japanese</option>
		</parameter>
	</parameters>
	<supportsMaxLength>true</supportsMaxLength>
	<items>
		<item name="Start">[Language]</item>
		
		<item name="Any">[japanesepheonome|chinesepheonome|koreanphenome][Any]</item>
		<item name="Any" next="">[japanesepheonome|chinesepheonome|koreanphenome]</item>
		
		<item name="Chinese">[chinesepheonome][Chinese]</item>
		<item name="Chinese" next="">[chinesepheonome]</item>
		
		<item name="Korean">[koreanphenome][Korean]</item>
		<item name="Korean" next="">[koreanphenome]</item>
		
		<item name="Japanese">[japanesepheonome][Japanese]</item>
		<item name="Japanese" next="">[japanesepheonome]</item>
	</items>
	<imports>
		<import>japanese_pheonome</import>
		<import>Chinese_pheoneome</import>
		<import>Korean_pheneoome</import>
	</imports>
</Grammar>